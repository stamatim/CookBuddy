<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.ShoppingListFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/buttonGetSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get shopping list" />

    <Button
        android:id="@+id/buttonSaveSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Shopping List" />

    <Button
        android:id="@+id/buttonResetSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset shopping list" />

    <EditText
        android:id="@+id/editTextSL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        tools:text="Shopping List" />

</LinearLayout>